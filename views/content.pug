    section#blogposts.row
  div.post.col-lg-11
    img(v-on:click='displayInfo' v-bind:src='obj.profile' alt='profile image' width='40px' height='30px')
    |                     {{ obj.author }} &mdash; 
    |                     {{ obj.date }}
    |                     {{ obj.reply }}
    div.message(v-html='obj.message')
    div.modal3(v-show='obj.isShowMyModal')
      button.close-button(type='button' v-on:click='obj.isShowMyModal = false') X
      h3 {{ obj.author }}
      div.modalInfo
        span.foodie
          b Foodie Level:&nbsp;
        span.modalDisc {{ obj.foodieLevel }}
        br
        br
        p.foodie
          b Bio:
        div.modalDisc
          | {{ obj.bio }}
        button(type='button' v-on:click='obj.isShowMyModal = false') Close
